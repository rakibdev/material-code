{
  "name": "material-code",
  "displayName": "Material Code",
  "description": "Dark theme for Visual Studio Code.",
  "version": "2.0.0",
  "publisher": "rakib13332",
  "author": "Rakib",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakibdev/material-code.git"
  },
  "bugs": {
    "url": "https://github.com/rakibdev/material-code/issues"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "material",
    "dark-theme"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#ffffff",
    "theme": "light"
  },
  "main": "./extension.pack.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:material-code.applyStyles",
    "onCommand:material-code.removeStyles"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Material Code",
        "uiTheme": "vs-dark",
        "path": "./dark.json",
        "_watch": true
      }
    ],
    "configuration": {
      "title": "Material Code",
      "properties": {
        "material-code.colorfulness": {
          "type": "string",
          "default": "medium",
          "enum": [
            "high",
            "medium",
            "low"
          ]
        },
        "material-code.brightness": {
          "type": "string",
          "default": "medium",
          "enum": [
            "high",
            "medium",
            "low"
          ]
        },
        "material-code.font": {
          "type": "string",
          "description": "Customize font family of whole UI."
        },
        "material-code.customCSS": {
          "type": "object",
          "markdownDescription": "```\n\"material-code.customCSS\": {\n  \".mac, .windows, .linux\": \"font-family: SF Mono;\"\n}\n```\n"
        }
      }
    },
    "commands": [
      {
        "command": "material-code.applyStyles",
        "title": "Material Code: Apply styles"
      },
      {
        "command": "material-code.removeStyles",
        "title": "Material Code: Remove styles"
      }
    ]
  },
  "scripts": {
    "build": "esbuild extension.js --bundle --outfile=extension.pack.js --external:vscode --format=cjs --platform=node",
    "dev": "export DEV_MODE=true && code-insiders --extensionDevelopmentPath=/home/rakib/Downloads/material-code && pnpm run build --watch",
    "release": "pnpm run build --minify && yes | vsce package --yarn && yes | vsce publish --yarn"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.1.2",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "esbuild": "^0.14.48",
    "vsce": "^2.9.2"
  }
}