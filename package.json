{
  "name": "material-code",
  "displayName": "Material Code",
  "description": "Dark theme for Visual Studio Code.",
  "version": "2.5.0",
  "publisher": "rakib13332",
  "author": "Rakib",
  "icon": "icon.png",
  "galleryBanner.color": "#ffffff",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakibdev/material-code"
  },
  "bugs": {
    "url": "https://github.com/rakibdev/material-code/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "material",
    "dark theme"
  ],
  "main": "./extension.pack.js",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Material Code",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      }
    ],
    "configuration": {
      "title": "Material Code",
      "properties": {
        "material-code.primaryColor": {
          "type": "string",
          "default": "#00adff",
          "pattern": "^#([A-Fa-f0-9]{6})$",
          "patternErrorMessage": "Use 6 digit hex format (e.g. #RRGGBB)."
        },
        "material-code.lightness": {
          "type": "number",
          "default": 8,
          "minimum": 0,
          "maximum": 10
        },
        "material-code.customCSS": {
          "type": "string",
          "markdownDescription": "Run `Material Code: Apply styles` from command palette after editing."
        }
      }
    },
    "commands": [
      {
        "command": "material-code.applyStyles",
        "title": "Material Code: Apply styles"
      },
      {
        "command": "material-code.removeStyles",
        "title": "Material Code: Remove styles"
      }
    ]
  },
  "scripts": {
    "editor": "code-insiders --extensionDevelopmentPath=/home/rakib/Downloads/material-code",
    "build:extension": "esbuild extension.js --bundle --outfile=extension.pack.js --external:vscode --format=cjs --platform=node",
    "dev:extension": "bun run build:extension --watch",
    "dev:theme": "export dev=true && bun --watch theme.js",
    "release": "bun run build:extension --minify && bun github-release.js && vsce package --no-dependencies && xdg-open https://marketplace.visualstudio.com/manage"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.2.7",
    "@vscode/sudo-prompt": "^9.3.1"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.21.1",
    "esbuild": "^0.19.4"
  }
}