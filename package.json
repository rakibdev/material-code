{
  "name": "material-code",
  "displayName": "Material Code",
  "description": "Dynamic theme for Visual Studio Code.",
  "version": "3.0.9",
  "publisher": "rakib13332",
  "author": "https://github.com/rakibdev",
  "icon": "icon.png",
  "galleryBanner.color": "#ffffff",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakibdev/material-code"
  },
  "bugs": {
    "url": "https://github.com/rakibdev/material-code/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "material",
    "theme"
  ],
  "main": "./build/extension.js",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Material Code",
        "uiTheme": "vs-dark",
        "path": "./build/dark.json",
        "_watch": true
      },
      {
        "label": "Material Code Light",
        "uiTheme": "vs",
        "path": "./build/light.json",
        "_watch": true
      }
    ],
    "configuration": {
      "title": "Material Code",
      "properties": {
        "material-code.colors": {
          "type": "object",
          "default": {},
          "markdownDescription": "Override theme colors",
          "properties": {
            "foreground": {
              "type": "string"
            },
            "mutedForeground": {
              "type": "string"
            },
            "background": {
              "type": "string"
            },
            "card": {
              "type": "string"
            },
            "popover": {
              "type": "string"
            },
            "hover": {
              "type": "string"
            },
            "border": {
              "type": "string"
            },
            "primary": {
              "type": "string"
            },
            "primaryForeground": {
              "type": "string"
            },
            "secondary": {
              "type": "string"
            },
            "secondaryForeground": {
              "type": "string"
            },
            "error": {
              "type": "string"
            },
            "errorForeground": {
              "type": "string"
            },
            "success": {
              "type": "string"
            },
            "warning": {
              "type": "string"
            },
            "syntax.comment": {
              "type": "string"
            },
            "syntax.string": {
              "type": "string"
            },
            "syntax.keyword": {
              "type": "string"
            },
            "syntax.variable": {
              "type": "string"
            },
            "syntax.attribute": {
              "type": "string"
            },
            "syntax.property": {
              "type": "string"
            },
            "syntax.function": {
              "type": "string"
            },
            "syntax.constant": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "material-code.inject": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "${extensionDir}/build/inject.css",
            "${extensionDir}/build/inject.js"
          ],
          "markdownDescription": "Select **Command Palette > Material Code: Apply styles** after editing.\n\nExamples: \n* `~/Downloads/custom.css`\n* `C:/Users/rakib/Downloads/custom.css`\n* `https://raw.githubusercontent.com/.../custom.css`\n* `body { ... }`\n* `<style>...</style>`\n* `<script>...</script>`\n* `<div>...</div><style>...</style>`"
        },
        "material-code.syntaxTheme": {
          "type": "string",
          "markdownDescription": "**Command Palette > Material Code: Dark Syntax Theme**"
        },
        "material-code.syntaxThemeLight": {
          "type": "string",
          "markdownDescription": "**Command Palette > Material Code: Light Syntax Theme**"
        }
      }
    },
    "commands": [
      {
        "command": "material-code.applyStyles",
        "title": "Material Code: Apply styles"
      },
      {
        "command": "material-code.removeStyles",
        "title": "Material Code: Remove styles"
      },
      {
        "command": "material-code.selectDarkSyntaxTheme",
        "title": "Material Code: Dark Syntax Theme"
      },
      {
        "command": "material-code.selectLightSyntaxTheme",
        "title": "Material Code: Light Syntax Theme"
      }
    ]
  },
  "scripts": {
    "dev": "export DEV=true && bun ./scripts/dev.ts",
    "build": "bun ./scripts/dev.ts && yes | vsce package --no-dependencies",
    "release": "bun ./scripts/release.ts && xdg-open https://marketplace.visualstudio.com/manage"
  },
  "dependencies": {
    "@vscode/sudo-prompt": "^9.3.1",
    "material-colors": "https://github.com/rakibdev/material-colors/releases/latest/download/npm.tgz"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/vscode": "1.75.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.24.2",
    "typescript": "^5.9.3"
  }
}
